SRC=main.c holberton.c
CC=gcc
OBJ=$(SRC:.c=.o)
NAME=holberton
RM=rm
CFLAGS=-Wall -Werror -Wextra -pedantic

.PHONY: all clean oclean fclean re

all: $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

clean:
	$(RM) -f *~ $(NAME)

oclean:
	$(RM) -f $(OBJ)

fclean:
	$(RM) -f *~ $(NAME)
	$(RM) -f $(OBJ)

re:
	$(CC) $(CFLAGS) -c $(NAME)
